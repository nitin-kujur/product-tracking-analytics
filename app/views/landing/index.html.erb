<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin: 100px 0 20px;">Tracking View</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"> <%= number_with_delimiter(@orders_count, :delimiter => ',')%></div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Total Orders</span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-stack-overflow fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= number_with_delimiter(@orders_quantity, :delimiter => ',')%></div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Total Quantity</span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-dollar fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="small"><%= number_to_currency(@sales.to_f.round(2), :unit => "$") %></div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Total Sales</span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-home fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @shops.count %> </div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Total Shops</span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <%= form_tag(landing_index_path, { method: 'get' , id: 'select_type_form'}) do %>
                <div class="col-md-12">
                    <div class="col-lg-1 col-md-1">
                        From:
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <%= text_field_tag 'form_date', value="", class: "form-control", type: "input", placeholder: "mm-dd-yy", value: @form_date %>
                    </div>
                    <div class="col-lg-1 col-md-1">
                        To:
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <%= text_field_tag 'to_date', value= "", class: "form-control", type: "input", placeholder: "mm-dd-yy", value: @to_date %>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <%= submit_tag 'Submit', class: "btn btn-primary", id: "sbt-report"%>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                    <div class="col-lg-1 col-md-1">
                        <%= link_to "All", landing_index_path, class:"btn btn-primary" %>
                    </div>
                    <div class="col-lg-8 col-md-12">
                        <%= select_tag :shop_id, "<option value='all'>All</option>" +options_from_collection_for_select(Shop.all, 'id', 'shopify_domain', params[:shop_id].to_i), onchange: "$('#select_type_form').submit();", class: "form-control", prompt: "--Select Shop--" %>
                    </div>
                </div>
                </div>
            <% end %>
            <div class="col-lg-8 col-md-12">
                <%= form_tag(landing_index_path,{method: 'get'}) do %>
                    <%= hidden_field_tag :reset, params[:reset] %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
        <div class="col-lg-12 col-md-24">
            <%= form_tag landing_index_path, :method => 'get' do %>
                <div class="col-lg-3 col-md-6">
                    <p>     
                        <%= text_field_tag :billed_to_search, params[:billed_to_search], placeholder: "Billed To" %>
                        <%= hidden_field_tag :shop_id, @shop_id %>
                        <%= hidden_field_tag :from_date, @from_date %>
                        <%= hidden_field_tag :to_date, @to_date %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :shipped_to_search, params[:shipped_to_search], placeholder: "Shipped To" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :item_search, params[:item_search], placeholder: "Item Name" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :tracking_number, params[:tracking_number], placeholder: "Tracking Number" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :sku_search, params[:sku_search], placeholder: "SKU" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :order_name_search, params[:order_name_search], placeholder: "Order Name" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :free_text_search, params[:free_text_search], placeholder: "Free Text Search" %>
                    </p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <%= submit_tag "Search", :name => nil, class: "btn btn-primary"%>
                </div>
            <% end %>
        </div>
        <div class="col-lg-12 col-md-24">
            <%= form_tag(landing_index_path, {:method => 'get', class: "form-link"} )do %>
                <%= hidden_field_tag 'fulfilled', "fulfilled" %>
                <%= hidden_field_tag :shop_id, @shop_id %>
                <%= hidden_field_tag :from_date, @from_date %>
                <%= hidden_field_tag :to_date, @to_date %>
                <%= submit_tag 'Fulfilled', :class => "hidden", :id => 'form_submit_button_fullfilled' %>
                <%= content_tag(:a, 'Fulfilled', :name => 'submit', :id => 'fullfilled_submit_link') %>
            <% end %>

            <%= form_tag(landing_index_path,{:method => 'get', class: "form-link"}) do%>
                <%= hidden_field_tag 'unfulfilled', "unfulfilled" %>
                <%= hidden_field_tag :shop_id, @shop_id %>
                <%= hidden_field_tag :from_date, @from_date %>
                <%= hidden_field_tag :to_date, @to_date %>
                <%= submit_tag 'Unfulfilled', :class => "hidden", :id => 'form_submit_button_unfullfilled' %>
                <%= content_tag(:a, 'Unfulfilled', :name => 'submit', :id => 'unfullfilled_submit_link') %>
            <% end %>

            <%= form_tag(landing_index_path, {:method => 'get', class: "form-link"})do %>
                <%= hidden_field_tag 'cancelled', "cancelled" %>
                <%= hidden_field_tag :shop_id, value: @shop_id %>
                <%= hidden_field_tag :from_date, value: @from_date %>
                <%= hidden_field_tag :to_date, value: @to_date %>
                <%= submit_tag 'Cancelled', :class => "hidden", :id => 'form_submit_button_cancelled' %>
                <%= content_tag(:a, 'Cancelled', :name => 'submit', :id => 'cancelled_submit_link') %>
                    
            <% end %>

            <%= form_tag(landing_index_path, {:method => 'get', class: "form-link"})do %>
                <%= hidden_field_tag 'archived', "archived" %>
                <%= hidden_field_tag :shop_id, @shop_id %>
                <%= hidden_field_tag :from_date, @form_date %>
                <%= hidden_field_tag :to_date,  @to_date %>
                <%= submit_tag 'Archived', :class => "hidden", :id => 'form_submit_button_archived' %>
                <%= content_tag(:a, 'Archived', :name => 'submit', :id => 'archived_submit_link') %>
            <% end %>
        </div>
        </div>
    </div>
</div>

<% if @orders.present? %>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Order Name</th>
                                <th>Parent Order</th>
                                <th>Shop</th>
                                <th>Status</th>
                                <th>Billed To</th>
                                <th>Shipped To</th>
                                <th>Tracking Number</th>
                                <th>Quantity</th>
                                <th>Amount</th>
                                <th>Shipped Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @orders.each do |order| %>
                                <tr class="odd gradeX">
                                    <td><%= order.try(:order_number) %></td>
                                    <td><%= order.try(:parent_order).try(:order_number) %></td>
                                    <td class="text-right"><%= order.try(:shop).try(:shopify_domain).truncate(20) %></td>
                                    <td><%= order.try(:fulfillment_status) %></td>
                                    <td><%= order.try(:billing_address).try(:first_name) %></td>
                                    <td class="center"><%= order.try(:shipping_address).try(:first_name) %></td>
                                    <td class="text-right"><%= order.try(:shopify_tracking_id).try(:truncate, 20) %></td>
                                    <td class="text-right"><%= order.try(:line_items).try(:sum, :quantity) %></td>
                                    <td class="text-right"><%= number_to_currency(order.try(:amount).to_f.round(2), :unit => "$") %></td>
                                    <td class="center"><td>
                                </tr>
                            <% end %>
                        
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
<% end %>
<script type="text/javascript">
    $('#will_paginate_id').bind('click', function(event){
        window.scrollTo(0,0);
        // Some code to show loader on screen
        $('#loading').html('Loading');
    });

    $(document).ready(function() {
        $(document).on("click","#fullfilled_submit_link",function() {
            $('#form_submit_button_fullfilled').click();
        });
        $(document).on("click","#unfullfilled_submit_link",function() {
            $('#form_submit_button_unfullfilled').click();
        });
        $(document).on("click","#cancelled_submit_link",function() {
            $('#form_submit_button_cancelled').click();
        });
        $(document).on("click","#archived_submit_link",function() {
            $('#form_submit_button_archived').click();
        });
    });

    $(document).on('ready page:load', function () {
        // $('#datetimepicker1').datetimepicker();
        $("#form_date").datetimepicker();
        $("#to_date").datetimepicker();
    });
</script>
<style type="text/css">
    .form-link {
        display: inline-block; //Or display: inline; 
        margin-left: 100px;
    }
</style>
