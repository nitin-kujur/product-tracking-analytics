<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin: 100px 0 20px;">Tracking View</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"> <%= @orders_count %></div>
                        <div>Total Orders</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left"><%#= link_to "View Details", customers_path %></span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-stack-overflow fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @orders_quantity %></div>
                        <div>Total Quantity</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left"><%#= link_to "View Details", hotels_path %></span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-dollar fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= number_to_currency(@sales.to_f.round(2), :unit => "$") %></div>
                        <div>Total Sales</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left"><%#= link_to "View Details", bands_path %></span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-home fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @shops.count %> </div>
                        <div>Total Shops</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left"><%#= link_to "View Details", artists_path %></span>
                    <span class="pull-right"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <%= form_tag landing_index_path, :method => 'get' do %>
                <div class="col-lg-3 col-md-6">
                    <p>     
                        <%= text_field_tag :billed_to_search, params[:billed_to_search], placeholder: "Billed To" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :shipped_to_search, params[:shipped_to_search], placeholder: "Shipped To" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :item_search, params[:item_search], placeholder: "Item Name" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :tracking_number, params[:tracking_number], placeholder: "Tracking Number" %>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <p>
                        <%= text_field_tag :free_text_search, params[:free_text_search], placeholder: "Tracking Number" %>
                    </p>
                </div>
                <%= submit_tag "Search", :name => nil %>
            <% end %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Order Name</th>
                            <th>Shop</th>
                            <th>Status</th>
                            <th>Billed To</th>
                            <th>Shipped To</th>
                            <th>Tracking Number</th>
                            <th>Quantity</th>
                            <th>Amount</th>
                            <th>Shipped Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @orders.each do |order| %>
                            <% cache order do %>
                                <tr class="odd gradeX">
                                    <td><%= order.try(:order_number) %></td>
                                    <td class="text-right"><%= order.try(:shop).try(:shopify_domain) %></td>
                                    <td><%= order.try(:fulfillment_status) %></td>
                                    <td><%= order.try(:billing_address).try(:city) %></td>
                                    <td class="center"><%= order.try(:shipping_address).try(:city) %></td>
                                    <td class="text-right"><%= order.try(:shopify_tracking_id) %></td>
                                    <td class="text-right"><%= order.try(:line_items).try(:sum, :quantity) %></td>
                                    <td class="text-right"><%= number_to_currency(order.try(:amount).to_f.round(2), :unit => "$") %></td>
                                    <td class="text-right"></td>
                                </tr>
                            <% end %>
                        <% end %>
                        
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>